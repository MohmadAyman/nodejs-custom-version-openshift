      <!-- Declare a new AngularJS app and associate the controller -->
      <body ng-app ng-controller="reciveOrders">

      <form>
            <div class="jumbotron">
                <h1 align="center">BREAK</h1>
                <h4 align="center">Current orders</h4>
                <div id="todo-form" class="row">
                    <div class="col-sm-8 col-sm-offset-2 text-center">
                        <form>
                            <div class="form-group">
                                <br>
                                <%for(var i=0; i<items.length; i++){%>
                                    <button type="button" name="items[i].title%" id="button" class="btn btn-success btn-block" method="post" action="/client/ordersUpdate/" > <%= items[i].title %></button>
                                <%}%>
                            </div>
                          <div class="total">
                            <!-- Calculate the total price of all chosen services. Format it as currency. -->
                            Total: <span></span>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </form>

        <!-- Include AngularJS from Google's CDN -->
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.0.7/angular.min.js"></script>
    </body>
